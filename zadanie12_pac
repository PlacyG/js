<!DOCTYPE html>
<head>
<title> ile sekund</title>
<meta charset="utf-8">
</head>
<body>
<div style="color:green;font-size:60px;">
<script language="JavaScript">
var D1_pac = parseInt(prompt("Podaj pierwszy numer dnia :"));
var D2_pac = parseInt(prompt("Podaj drugi numer dnia :"));
var G1_pac = parseInt(prompt("Podaj pierwszą godzinę :"));
var G2_pac = parseInt(prompt("Podaj drugą godzinę :"));


var dni = D1_pac - D2_pac;
var godziny = G1_pac - G2_pac;


var sekundy = dni * 24 * 60 * 60 + godziny * 60 * 60;


document.write("Sekundy między dniami i godzinami: " + sekundy);
</script>
</div>
</body>
</html>
